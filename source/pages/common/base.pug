		title = PROJECT_NAME,
		currentPage = 'index.html'

block variables

include ./mixins
doctype html
html(lang="ru").page
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
