-
	const isMainPage = currentPage === 'index.html'
header.header
	a(href=!isMainPage && 'index.html',
		tabindex=!isMainPage && -1)._logo
		img(src='img/logo-city-of-sedona.svg' width=185 height=96 alt='Герб Седоны.')

	nav._nav
		button.burger._toggle(type='button' aria-label='Открыть меню' hidden=true aria-expanded='false' aria-controls='main-nav')
			span._open 🍔
			span._close ✖️
		ul._list.page__no-list#main-nav
			each href, text in navigation
				- const isCurrentPage = currentPage === href
				li._item
					a._link(href=href, aria-current=isCurrentPage && 'page')=text
